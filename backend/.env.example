# Application
APP_NAME=StudyNotesManager
APP_VERSION=0.1.0
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/studynotes
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=studynotes
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# JWT
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Baidu OCR
BAIDU_OCR_APP_ID=your-baidu-app-id
BAIDU_OCR_API_KEY=your-baidu-api-key
BAIDU_OCR_SECRET_KEY=your-baidu-secret-key

# Aliyun OSS
ALIYUN_OSS_ACCESS_KEY_ID=your-aliyun-access-key-id
ALIYUN_OSS_ACCESS_KEY_SECRET=your-aliyun-access-key-secret
ALIYUN_OSS_BUCKET_NAME=your-bucket-name
ALIYUN_OSS_ENDPOINT=oss-cn-hangzhou.aliyuncs.com

# DeepSeek AI
DEEPSEEK_API_KEY=your-deepseek-api-key
DEEPSEEK_API_BASE=https://api.deepseek.com/v1

# OpenAI (optional)
OPENAI_API_KEY=your-openai-api-key

# File Upload
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=["jpg","jpeg","png","pdf"]

# Logging
LOG_LEVEL=INFO
